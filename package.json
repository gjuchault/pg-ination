{
	"name": "pg-ination",
	"version": "0.1.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gjuchault/pg-ination.git"
	},
	"type": "module",
	"exports": {
		".": {
			"import": "./build/index.js",
			"types": "./build/index.d.ts"
		},
		"./adapters/bun": {
			"import": "./build/adapters/bun.js",
			"types": "./build/adapters/bun.d.ts"
		},
		"./adapters/postgres": {
			"import": "./build/adapters/postgres.js",
			"types": "./build/adapters/postgres.d.ts"
		},
		"./adapters/pg": {
			"import": "./build/adapters/pg.js",
			"types": "./build/adapters/pg.d.ts"
		},
		"./adapters/slonik": {
			"import": "./build/adapters/slonik.js",
			"types": "./build/adapters/slonik.d.ts"
		},
		"./adapters/sqlite": {
			"import": "./build/adapters/sqlite.js",
			"types": "./build/adapters/sqlite.d.ts"
		},
		"./adapters/drizzle": {
			"import": "./build/adapters/drizzle.js",
			"types": "./build/adapters/drizzle.d.ts"
		}
	},
	"license": "MIT",
	"engines": {
		"node": ">24"
	},
	"volta": {
		"node": "25.2.1",
		"npm": "11.6.2"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "node --disable-warning=ExperimentalWarning --experimental-strip-types  ./scripts/build.ts",
		"clean": "rimraf build coverage",
		"type:check": "tsc --noEmit",
		"lint": "biome check . --write --unsafe",
		"lint:check": "biome ci .",
		"test": "node --disable-warning=ExperimentalWarning --experimental-strip-types ./scripts/test.ts test",
		"test:watch": "node --disable-warning=ExperimentalWarning --experimental-strip-types ./scripts/test.ts test:watch",
		"test:coverage": "node --disable-warning=ExperimentalWarning --experimental-strip-types ./scripts/test.ts test:coverage",
		"spell:check": "cspell \"{README.md,CODE_OF_CONDUCT.md,CONTRIBUTING.md,.github/*.md,src/**/*.ts}\"",
		"cz": "cz",
		"semantic-release": "semantic-release"
	},
	"peerDependencies": {
		"pg": ">=8",
		"postgres": "^3.4.7",
		"slonik": ">=40.0.0",
		"drizzle-orm": ">=0.29.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.9",
		"@microsoft/api-extractor": "^7.55.2",
		"@ryansonshine/commitizen": "^4.2.8",
		"@ryansonshine/cz-conventional-changelog": "^3.3.4",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/github": "^12.0.2",
		"@semantic-release/npm": "^13.1.3",
		"@semantic-release/release-notes-generator": "^14.1.0",
		"@slonik/pg-driver": "^48.8.7",
		"drizzle-orm": ">=0.45.1",
		"@types/bun": "^1.3.4",
		"@types/node": "^24.10.2",
		"@types/pg": "^8.16.0",
		"@types/prompts": "^2.4.9",
		"c8": "^10.1.3",
		"cspell": "^9.4.0",
		"esbuild": "^0.27.1",
		"glob": "^13.0.0",
		"is-main": "^0.4.0",
		"postgres": "^3.4.7",
		"pg": ">=8",
		"rimraf": "^6.1.2",
		"semantic-release": "^25.0.2",
		"slonik": ">=48.8.7",
		"typescript": "^5.9.3"
	}
}
